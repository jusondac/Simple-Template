<div class="text-center">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
</div>

<div class="d-flex justify-content-center">
  <div class="card text-center p-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'email', class:'form-control mb-4' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:'password', class:'form-control' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:'new-password', class:'form-control mb-4'  %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <small>(we need your current password to confirm your changes)</small><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control mb-4'  %>
      </div>

      <div class="actions mb-4">
        <%= f.submit "Update", class:'btn btn-success btn-shadow btn-block' %>
      </div>
    <% end %>
    <div class="text-center">
      <div class="card pb-3 text-center" style="width:33vw; border:2px solid red;">
        <h6 class="text-danger m-3">Danger zone</h6>
        <h6 class="text-left text-danger m-3">Use this button if you don't need again. We will hope you back with different email. Before you delete, just remember that we will miss you.</h6>
        <%= button_to "Good bye #{Rails.application.class.parent_name}", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger btn-shadow' %>
      </div>
    </div>

    <%= link_to "Back", :back, class:'btn btn-block btn-secondary btn-lg btn-shadow mt-3' %>
  </div>
</div>
